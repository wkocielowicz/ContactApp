<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".activities.major.MainActivity">

    <Button
        android:id="@+id/add_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj przykładowy kontakt"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/go_to_contact_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przejdź do ContactActivity" />

    <Button
        android:id="@+id/change_language_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainSwitchLanguage"
        android:layout_marginTop="16dp"/>

</LinearLayout>